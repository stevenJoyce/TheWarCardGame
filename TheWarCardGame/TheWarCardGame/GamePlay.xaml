<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheWarCardGame.GamePlay">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="player2" ></Image>
            <BoxView x:Name="player1"
             CornerRadius="10"
             WidthRequest="160"
             HeightRequest="160"
             VerticalOptions="Top"
             HorizontalOptions="Left" />

            <BoxView x:Name="player2"
             CornerRadius="10"
             WidthRequest="160"
             HeightRequest="160"
             VerticalOptions="bottom"
             HorizontalOptions="right" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>