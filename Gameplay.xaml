<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TheWarCardGame.Gameplay">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="P1Deck" Aspect="AspectFit"/>
            <Image x:Name="P1Card" Aspect="AspectFit"/>
            <Button Text="Deal" BackgroundColor="#1edd0d" BorderWidth="2" BorderColor="#16ba07"  
                     HorizontalOptions="Center" VerticalOptions="CenterAndExpand" Clicked="DealBtn_Clicked" />
            <Image x:Name="P2Card" Aspect="AspectFit" />
            <Image x:Name="P2Deck" Aspect="AspectFit" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>